include "Entity.fbs";

namespace Game.Net;

table PlayerMove {
    player: ubyte;
    pos: Vec2;
    angle: float;
}

table PlayerShoot {
    player: ubyte;
    pos: Vec2;
    angle: float;
}

table PlayerPlaceWall {
    wall: WallData;
}

table PlayerJoin {
    player: ubyte;
}

table PlayerDisconnect {
    player: ubyte;
}

table PlayerJoinDownload {
    id: ubyte; // ID Assigned to new player
    players: [PlayerData];
    bullets: [BulletData];
    walls: [WallData];
}

union PacketType {
    PlayerJoin,
    PlayerJoinDownload,
    PlayerDisconnect,
    PlayerMove,
    PlayerShoot,
    PlayerPlaceWall,
}

table Packet {
    type: PacketType;
}

root_type Packet;